<script>
    let ball: any = document.querySelector('#mouseBall');
    console.log('ball')
    document.addEventListener('mousemove', (event) => {
        // event.preventDefault()
        const height = document.body.clientHeight;
        const width = document.body.clientWidth;  
        // console.log(`Mouse X: ${(event.clientX * 100) / width}, Mouse Y: ${(event.clientY * 100)/height}`);
        ball.style.top = (event.clientY + 0)+ 'px';
        ball.style.left = (event.clientX + 0) + 'px';
