</div>

<script is:inline>
	/* THEME */
	if (localStorage.getItem("theme") !== null) {
		switch(localStorage.getItem("theme")) {
			case 'system':
				// console.log('sys');
				document.querySelector('#autoThemeButton').classList.add('active-theme'); 
				document.querySelector('#lightThemeButton').classList.remove('active-theme'); 
				document.querySelector('#darkThemeButton').classList.remove('active-theme'); 
			break;
			case 'dark':
			// console.log('dark');
				document.querySelector('#darkThemeButton').classList.add('active-theme'); 
				document.querySelector('#lightThemeButton').classList.remove('active-theme'); 
				document.querySelector('#autoThemeButton').classList.remove('active-theme'); 
			break;
			case 'light':
			// console.log('light');
				document.querySelector('#lightThemeButton').classList.add('active-theme'); 
				document.querySelector('#autoThemeButton').classList.remove('active-theme'); 
				document.querySelector('#darkThemeButton').classList.remove('active-theme'); 
			break;
		}
	} else {
		// console.log('else');
		switch(window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light") {
			case 'system':
				document.querySelector('#autoThemeButton').classList.add('active-theme'); 
				document.querySelector('#lightThemeButton').classList.remove('active-theme'); 
				document.querySelector('#darkThemeButton').classList.remove('active-theme'); 
			break;
			case 'dark':
				document.querySelector('#darkThemeButton').classList.add('active-theme'); 
				document.querySelector('#lightThemeButton').classList.remove('active-theme'); 
				document.querySelector('#autoThemeButton').classList.remove('active-theme'); 
			break;
			case 'light':
				document.querySelector('#lightThemeButton').classList.add('active-theme'); 
				document.querySelector('#autoThemeButton').classList.remove('active-theme'); 
				document.querySelector('#darkThemeButton').classList.remove('active-theme'); 
			break;
		}
	}

	function updateTheme(value) {
		switch(value) {
			case 'system':
				// console.log('sys');
				document.querySelector('#autoThemeButton').classList.add('active-theme'); 
				document.querySelector('#lightThemeButton').classList.remove('active-theme'); 
				document.querySelector('#darkThemeButton').classList.remove('active-theme'); 
			break;
			case 'dark':
			// console.log('dark');
				document.querySelector('#darkThemeButton').classList.add('active-theme'); 
				document.querySelector('#lightThemeButton').classList.remove('active-theme'); 
				document.querySelector('#autoThemeButton').classList.remove('active-theme'); 
			break;
			case 'light':
			// console.log('light');
				document.querySelector('#lightThemeButton').classList.add('active-theme'); 
				document.querySelector('#autoThemeButton').classList.remove('active-theme'); 
				document.querySelector('#darkThemeButton').classList.remove('active-theme'); 
			break;
		}
		document.documentElement.classList.remove("light", "dark");
		document.documentElement.classList.add(value === "system" ? window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light" : value);
		localStorage.setItem("theme", value === "system" ? 'system' : value);
	}

	updateTheme(localStorage.getItem("theme") ? localStorage.getItem("theme") : 'system');

	window.matchMedia("(prefers-color-scheme: dark)").addEventListener("change", e => {updateTheme(localStorage.getItem("theme") ? localStorage.getItem("theme") : 'system');});
	/* THEME BUTTONS */
	document.querySelector('#lightThemeButton').addEventListener('click', () => {
		updateTheme('light');
	});

	document.querySelector('#darkThemeButton').addEventListener('click', () => {
		updateTheme('dark');
	});

	document.querySelector('#autoThemeButton').addEventListener('click', () => {
		updateTheme('system');
	});

	/* NAVBAR */
	document.querySelector('#mobile-menu').addEventListener('click', () => {
		// console.log('ei')

		doMenuLogic();
	});
	
	document.querySelector('#menuButton').addEventListener('click', () => {
		// console.log('ei')
		doMenuLogic();
	});

	document.querySelector('#menuButton_desktop').addEventListener('click', () => {
		doMenuLogic();
	});

	function doMenuLogic() {
		document.querySelector('#mobile-menu').classList.toggle("full-menu_show");

		if(document.querySelector('#mobile-menu').className.includes('full-menu_show')) {
			document.querySelector('#menuButton').classList.remove('inv-rotation');
			document.querySelector('#menuButton').classList.add('rotation'); 
		} else {
			document.querySelector('#menuButton').classList.remove('rotation'); 
			document.querySelector('#menuButton').classList.add('inv-rotation');
		} 
	}
</script>

<style>
	.counter {
		counter-reset: section;
	}

	.rotated-left-text {
		/* rotate: 90deg; */
		writing-mode: vertical-rl;
		font-family: 'Quicksand';
	}

	.rotation {
		/* transform: rotate(90deg); */
		animation-name: rotate;
		animation-duration: 0.5s;
		animation-direction: normal;
		animation-fill-mode: both;
		/* transform: rotate(90deg); */
	}

	.inv-rotation {
		/* transform: rotate(90deg); */
		animation-name: inv-rotate;
		animation-duration: 0.5s;
		animation-direction: normal;
		animation-fill-mode: both;
		/* transform: rotate(90deg); */
	}

	@keyframes rotate {
		0% {
			transform: rotate(0deg);
		}
		100% {
			transform: rotate(-90deg);
		}
	}

	@keyframes inv-rotate {
		0% {
			transform: rotate(-90deg);
		}
		100% {
			transform: rotate(0deg);
		}
	}

	.full-menu {
		/* display: none; */
		position: absolute;
		padding: 4rem 0.5rem 0.5rem 0.5rem;
		top: 0;
		left: 0;
		width: 100%;
		height: 100vh;
		z-index: 15;
		background-color: var(--navbar-bg);
		backdrop-filter: blur(6px);
		display: flex;
		flex-direction: row;

		background-image:
			linear-gradient(90deg, var(--squares-gradient) 50%, transparent 50%),
			linear-gradient(var(--squares-gradient) 50%, transparent 50%);
		background-size: 4px 4px;

		transform: translateX(-110%);
    	transition: transform 250ms ease-in-out;
	}

	.full-menu_show {
		/* display: flex; */
		transform: translateX(0);
	}

    .navbar {
		position: sticky;
		top: 0;
		left: 0;
		width: 100%;
		height: 4rem;
        z-index: 20;
		background-color: var(--navbar-bg);
		backdrop-filter: blur(6px);
	}

	.nav-button {
		color: var(--font);
		margin-left: 1vw;
		margin-right: 1vw;
		padding-left: 4px;
		padding-right: 4px;
		cursor: pointer;
		font-family: 'Quicksand';
		width: 6rem;
		position: relative;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.sup:after {
		/* counter-increment: section; Increment the value of section counter by 1 */
  		content: counter(section) "a";
		counter-increment: section;
		position: absolute;
		top:-5px;
		font-size: 0.7rem;
		/* margin-left: 1px; */
	}

	.nav-button:hover{
		font-weight: bolder;
	}

	.nav-button:hover:before{
		content:'<\/';
		font-weight: bolder;
	}

	.nav-button:hover:after{
		content:'>';
		font-weight: bolder;
	}

	.active-theme {
		color:#0F7EEB;
	}

	.active-theme span {
		color:#0F7EEB;
		background-color:#0F7EEB;
	}

	button {
		color: var(--font);
		outline: none;
		z-index: 10;
		border: none;
		width: 5rem;
		height: 2rem;
		font-size: 17px;
		/* padding: 1rem 2rem; */
		position: relative;
		background: none;
		cursor: pointer;
	}
	
	button:active {
		transform: scale(.98);
	}
	
	button span {
		position: absolute;
		background: var(--font);
		transition: .5s;
	}
	
	button span:nth-child(1) {
		top: 0;
		left: 0;
		width: 2px;
		height: 30%;
	}
	
	button:hover span:nth-child(1) {
		height: 50%;
	}
	
	button span:nth-child(2) {
		top: 0;
		left: 0;
		width: 15%;
		height: 2px;
	}
	
	button:hover span:nth-child(2) {
		width: 50%;
	}
	
	button span:nth-child(3) {
		bottom: 0;
		right: 0;
		width: 2px;
		height: 30%;
	}
	
	button:hover span:nth-child(3) {
		height: 50%;
	}
	
	button span:nth-child(4) {
		bottom: 0;
		right: 0;
		width: 15%;
		height: 2px;
	}
	
	button:hover span:nth-child(4) {
		width: 50%;
	}
</style>