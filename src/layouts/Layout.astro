--- 
import ViewTransitions from 'astro/components/ViewTransitions.astro';
import BallDecoration from '../components/Ball-Decoration.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
// import Header from '../components/Header.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- Google Material Symbols -->
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
		<!-- Google Fonts Preconnect -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<!-- Google Quicksand Font -->
		<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400&display=swap" rel="stylesheet">
		<!-- Google Montserrat Font -->
		<link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Quicksand:wght@300;400&display=swap" rel="stylesheet">

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions/>
	</head>
	<body>
		<div id="div-content">
			<slot />
			<BallDecoration/>
		</div>
	</body>
</html>

<style is:global>
	:global(.dark) {
		color-scheme: dark;
	}

	.light {
		/* ... */
		--navbar-bg: rgba(238,238,238,0.6);
		--background: #fefefe;
		--title: #414141;
		--font: #242424;
		--font-disabled: #727272;
		--squares-gradient: rgba(254, 254, 254, .3);
		--card-overlay: rgba(34, 34, 34, 0.7);
	}

	.dark {
		/* ... */
		--navbar-bg: rgba(43,43,43,0.6);
		--background: #242424;
		--title: #bebebe;
		--font: #fefefe;
		--font-disabled: #888888;
		--squares-gradient: rgba(36, 36, 36, .3);
		--card-overlay: rgba(221, 221, 221, 0.7);
	}

