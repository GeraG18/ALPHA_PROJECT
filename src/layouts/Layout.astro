	/* FONTS & ICONS */
	.quickSandFont {
		font-family: 'Quicksand';
	}

	.MontserratFont {
		font-family: 'Montserrat';
	}

	.material-symbols-outlined {
		font-variation-settings:
		'FILL' 0,
		'wght' 400,
		'GRAD' 0,
		'opsz' 48
	}

	/* GENERAL */
	* {
		font-family: 'Montserrat';
		color: var(--font);
	}

	html {
		font-family: 'Montserrat';
		background: var(--background);
	}

	.title {
		font-family: 'Quicksand';
		font-weight: 600;
		color: var(--title);
    	transition: .3s ease-in-out;
